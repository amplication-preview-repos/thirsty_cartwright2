datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  author    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  likes     Like[]
  retweetOf String?
  updatedAt DateTime @updatedAt
}

model Follow {
  createdAt DateTime @default(now())
  follower  String?
  following String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  bio               String?
  createdAt         DateTime @default(now())
  email             String?  @unique
  firstName         String?
  id                String   @id @default(cuid())
  lastName          String?
  likes             Like[]
  password          String
  profilePictureUrl String?
  roles             Json
  updatedAt         DateTime @updatedAt
  username          String   @unique
}
